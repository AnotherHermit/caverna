<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.quazz.caverna" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/supplies_storage"
        android:label="@string/app_name"
        android:theme="@style/MaterialTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".ui.PlayerScoreActivity"
            android:label="@string/title_activity_player_score"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".ui.PlayersActivity"
            android:label="@string/title_activity_players"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>
