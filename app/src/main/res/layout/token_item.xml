<?xml version="1.0" encoding="utf-8"?>
<ch.quazz.caverna.widget.StoppableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_margin"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ch.quazz.caverna.widget.StoppableWrapper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/dog"
            android:contentDescription="@string/dogs" />
    </ch.quazz.caverna.widget.StoppableWrapper>

    <ch.quazz.caverna.widget.StoppableWrapper
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dogs"
            android:textSize="@dimen/text_items"/>
    </ch.quazz.caverna.widget.StoppableWrapper>

    <ch.quazz.caverna.widget.StoppableWrapper
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.wefika.horizontalpicker.HorizontalPicker
            android:id="@+id/token_horizontalPicker"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/primaryDarkText"
            android:textSize="@dimen/text_items" />
    </ch.quazz.caverna.widget.StoppableWrapper>

</ch.quazz.caverna.widget.StoppableLinearLayout>
